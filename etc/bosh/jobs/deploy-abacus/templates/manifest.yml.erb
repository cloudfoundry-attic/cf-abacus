---
domain: <%= p("cf.domain") %>
memory: <%= p("cf.memory") %>
disk_quota: <%= p("cf.disk_quota") %>
instances: <%= p("cf.instances") %>
applications:
  - name: abacus-pouchserver
    host: <%= p("abacus.dbserver.host") %>
    path: /var/vcap/packages/cf-abacus/lib/utils/pouchserver/.cfpack/app.zip
  - name: abacus-eureka-plugin
    host: <%= p("abacus.eureka.host") %>
    path: /var/vcap/packages/cf-abacus/lib/plugins/eureka/.cfpack/app.zip
    env:
      SECURED: <%= p("abacus.env.secured") %>
      JWTKEY: <%= p("abacus.env.jwt_key") %>
      JWTALGO: <%= p("abacus.env.jwt_algo") %>
      DB:  <%= p("abacus.dbserver.host") %>
  - name: abacus-account-plugin
    host: <%= p("abacus.account.host") %>
