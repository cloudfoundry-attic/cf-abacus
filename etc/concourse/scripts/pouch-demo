#!/bin/bash

set -e

pushd built-project
  TIMEOUT=$(expr ${CI_START_TIMEOUT:-10000} / 1000)
  echo "Using start timeout of $TIMEOUT seconds"

  echo "Running demo ..."
  npm start
  sleep $TIMEOUT
  npm run demo -- --start-timeout $CI_START_TIMEOUT --total-timeout $CI_PIPELINE_TIMEOUT

  echo "Stopping Abacus ..."
  npm stop
popd
