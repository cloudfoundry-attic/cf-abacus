#!/bin/bash

export CONF=${1:-cf}

echo "Updating root level locks ..."
rm -rf node_modules
rm yarn.lock

set -e

yarn bootstrap
yarn run provision

for MODULE in $(node_modules/abacus-etc/apprc node_modules/abacus-etc/apps.rc $CONF apps); do
  echo "Updating ${MODULE} locks ... "
  pushd $MODULE
    set +e
    rm -rf node_modules
    rm yarn.lock
    set -e
    yarn install --production
  popd
done
