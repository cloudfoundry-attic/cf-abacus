#!/bin/bash

set -e

# Run demo test on CF

# Only run the following steps if CF_TEST is true
if [ "$CF_TEST" == "true" ]; then

  if [ "$1" != "" ]; then
    CF_SYS_DOMAIN=$1
  fi
  if [ "$2" != "" ]; then
    CF_USER=$2
  fi
  if [ "$3" != "" ]; then
    CF_PASSWORD=$3
  fi
  if [ "$4" != "" ]; then
    CF_ORG=$4
  fi
  if [ "$5" != "" ]; then
    CF_SPACE=$5
  fi
  if [ "$6" != "" ]; then
    CF_DOMAIN=$6
  fi

  # Only run the following steps if CF_SYS_DOMAIN is configured
  if [ "$CF_SYS_DOMAIN" != "" ]; then

    # Download the CF CLI
    mkdir -p bin/.cf
    UNAME=$(uname)
    if [ "$UNAME" == "Darwin" ]; then
      (cd bin/.cf && curl -L "https://cli.run.pivotal.io/stable?release=macosx64-binary&source=github" | tar -zx)
    else
      (cd bin/.cf && curl -L "https://cli.run.pivotal.io/stable?release=linux64-binary&source=github" | tar -zx)
    fi
    export PATH=$PATH:$(pwd)/bin/.cf

    # Login
    cf api --skip-ssl-validation https://api.$CF_SYS_DOMAIN
    cf login -u $CF_USER -p $CF_PASSWORD -o $CF_ORG -s $CF_SPACE

    # Start clean
    yarn run cfdelete medium

    # Stage and start the apps
    yarn run cfstage medium
    yarn run cfstart medium

    # Run the demo
    yarn run demo -- --collector https://abacus-usage-collector.$CF_DOMAIN --reporting https://abacus-usage-reporting.$CF_DOMAIN

  else
    echo "Warning: skipping CF test as CF_SYS_DOMAIN is not configured" >&2
  fi
fi
