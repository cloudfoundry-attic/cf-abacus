{
  "name": "abacus-mocha",
  "description": "Painless testing with Mocha",
  "license": "Apache-2.0",
  "version": "1.1.5-rc.0",
  "private": true,
  "homepage": "https://github.com/cloudfoundry-incubator/cf-abacus/tree/master/tools/mocha",
  "bugs": {
    "url": "https://github.com/cloudfoundry-incubator/cf-abacus/issues"
  },
  "repository": {
    "type": "git",
    "url": "http://github.com/cloudfoundry-incubator/cf-abacus.git"
  },
  "keywords": [
    "cf",
    "abacus"
  ],
  "files": [
    ".npmrc",
    "abacus-mocha",
    "src/"
  ],
  "main": "src/index.js",
  "bin": {
    "abacus-mocha": "./abacus-mocha"
  },
  "scripts": {
    "test": "abacus-eslint && nyc ./abacus-mocha --grep '@failing' --invert && nyc ./abacus-mocha --file src/test/nonstandard.js --fgrep '/^@slow/' --invert",
    "generate-coverage": "nyc report --reporter=lcovonly",
    "lint": "abacus-eslint",
    "pub": "publish"
  },
  "dependencies": {
    "abacus-debug": "file:../../lib/utils/debug",
    "abacus-moment": "file:../../lib/utils/moment",
    "async": "^2.6.0",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "commander": "^2.8.1",
    "longjohn": "^0.2.12",
    "mocha": "^5.2.0",
    "recursive-readdir-sync": "1.0.6",
    "sinon": "^6.1.4",
    "underscore": "^1.9.1"
  },
  "devDependencies": {
    "abacus-eslint": "file:../eslint",
    "abacus-publish": "file:../publish",
    "chai-as-promised": "^7.1.1"
  },
  "nyc": {
    "cache": true,
    "reporter": [
      "text",
      "html"
    ],
    "exclude": [
      "src/test/**"
    ]
  },
  "engines": {
    "node": ">=8.10.0 <9.0.0",
    "npm": "<5.0.0",
    "yarn": ">=1.2.1"
  }
}
