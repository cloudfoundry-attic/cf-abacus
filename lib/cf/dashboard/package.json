{
  "name": "abacus-service-dashboard",
  "description": "CF Service Dashboard for Abacus",
  "license": "Apache-2.0",
  "version": "1.1.3",
  "private": true,
  "homepage": "https://github.com/cloudfoundry-incubator/cf-abacus/lib/cf/dashboard",
  "bugs": {
    "url": "https://github.com/cloudfoundry-incubator/cf-abacus/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cloudfoundry-incubator/cf-abacus.git"
  },
  "keywords": [
    "cf",
    "abacus",
    "dashboard"
  ],
  "files": [
    ".apprc",
    "manifest.yml",
    "src/"
  ],
  "main": "src/index.js",
  "scripts": {
    "postinstall": "a=$(pwd); cd src/webapp; yarn install; cd $a;",
    "start": "launch webapp start",
    "stop": "webapp stop",
    "lint": "abacus-eslint",
    "pub": "publish",
    "cfpush": "cfpush",
    "jsdoc": "jsdoc -c jsdoc.json",
    "jshint": "jshint --exclude coverage,docs,jsdoc,node_modules,webapp,test,tmp  --reporter=node_modules/jshint-stylish .",
    "jshint-ci": "jshint --exclude coverage,docs,jsdoc,node_modules,public,tmp --reporter=checkstyle .",
    "watch": "mocha src/test/backend --watch",
    "jsformat": "js-beautify -r *.js -r src/*.js -r src/lib/*.js -r src/lib/**/*.js -r src/test/*.js -r src/test/**/*.js",
    "test": "mocha src/test/*-test.js && karma start src/test/frontend/karma.conf.js && if [ -d ./.coverage ] ; then yarn run combinecoverage; fi ",
    "generate-coverage": "true",
    "combinecoverage": "cat src/test/frontend/coverage/lcov.info >> ./.coverage/lcov.info && node --harmony src/test/combineJson.js",
    "backend-coverage": "node ./node_modules/istanbul-harmony/lib/cli.js cover  --hook-run-in-context ./node_modules/mocha/bin/_mocha -- --ui bdd -R spec -t 5000 src/test/backend/ && node --harmony ./node_modules/istanbul-harmony/lib/cli.js report --dir src/test/backend/coverage --root coverage html",
    "coverage": "karma start src/test/frontend/karma.conf.js && node ./node_modules/istanbul-harmony/lib/cli.js cover  --hook-run-in-context ./node_modules/mocha/bin/_mocha -- --ui bdd -R spec -t 5000 src/test/*-test.js && node --harmony ./node_modules/istanbul-harmony/lib/cli.js report --dir src/test/backend/coverage --root coverage html"
  },
  "dependencies": {
    "abacus-cluster": "file:../../utils/cluster",
    "abacus-dbclient": "file:../../utils/dbclient",
    "abacus-debug": "file:../../utils/debug",
    "abacus-launcher": "file:../../utils/launcher",
    "abacus-moment": "file:../../utils/moment",
    "abacus-urienv": "file:../../utils/urienv",
    "abacus-vcapenv": "file:../../utils/vcapenv",
    "abacus-webapp": "file:../../utils/webapp",
    "bluebird": "3.4.6",
    "body-parser": "1.17.1",
    "cfenv": "1.0.3",
    "connect-mongo": "1.3.2",
    "express": "4.15.2",
    "express-session": "1.15.2",
    "helmet":"3.8.1",
    "https-proxy-agent": "1.0.0",
    "lodash": "4.13.1",
    "passport": "0.3.2",
    "passport-oauth2": "1.4.0",
    "pug": "2.0.0-beta3",
    "request": "2.83.0",
    "winston": "2.3.1",
    "formidable": "1.1.1",
    "css": "2.2.1",
    "nano": "6.4.2",
    "uuid": "3.1.0",
    "ajv": "^6.0.0"
  },
  "devDependencies": {
    "abacus-cfpush": "file:../../../tools/cfpush",
    "abacus-eslint": "file:../../../tools/eslint",
    "abacus-mocha": "file:../../../tools/mocha",
    "nyc": "^11.4.1",
    "abacus-publish": "file:../../../tools/publish",
    "istanbul-harmony": "0.3.16",
    "chai": "3.5.0",
    "chai-http": "3.0.0",
    "js-beautify": "1.6.4",
    "jsdoc": "3.4.0",
    "jshint": "2.9.3",
    "jshint-stylish": "2.2.0",
    "nock": "9.0.2",
    "proxyquire": "1.5.0",
    "sinon": "1.17.5",
    "sinon-chai": "2.8.0",
    "grunt": "1.0.1",
    "karma": "1.5.0",
    "karma-phantomjs-launcher": "1.0.3",
    "karma-read-json": "1.1.0",
    "jasmine-core": "^2.8.0",
    "karma-jasmine": "1.1.0",
    "karma-cli": "1.0.1",
    "karma-coverage": "1.1.1",
    "grunt-contrib-concat": "1.0.1",
    "grunt-contrib-cssmin": "1.0.2",
    "grunt-contrib-jshint": "1.0.0",
    "grunt-contrib-less": "1.4.0",
    "grunt-contrib-uglify": "2.0.0",
    "grunt-contrib-watch": "1.0.0",
    "grunt-karma": "2.0.0",
    "grunt-ng-annotate": "3.0.0",
    "grunt-npm-install": "0.3.1",
    "grunt-run": "0.6.0",
    "jsdom": "9.12.0",
    "jquery": "3.2.1"
  },
  "engines": {
    "node": ">=8.9.4 <9.0.0",
    "npm": "<5.0.0",
    "yarn": ">=1.2.1"
  }
}
